unit uDMConexao;

interface

uses
  System.SysUtils, System.Classes, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Error, FireDAC.UI.Intf, FireDAC.Phys.Intf, FireDAC.Stan.Def,
  FireDAC.Stan.Pool, FireDAC.Stan.Async, FireDAC.Phys,
  FireDAC.Phys.MySQLDef, FireDAC.VCLUI.Wait, FireDAC.Comp.UI,
  FireDAC.Phys.MySQL, Data.DB, FireDAC.Comp.Client, FireDAC.Phys.PG,
  FireDAC.Phys.PGDef;

type
  TudmConexao = class(TDataModule)
    FDConnection : TFDConnection;
    FDriver      : TFDPhysMySQLDriverLink;
    FDWaitCursor : TFDGUIxWaitCursor;
  public
    procedure Conectar;
  end;

var
  dmConexao: TudmConexao;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TudmConexao.Conectar;
begin
  FDriver.VendorLib      := ExtractFilePath(ParamStr(0)) + 'libpq.dll';
  FDConnection.Connected := False;

  FDConnection.Params.Clear;
  FDConnection.Params.DriverID := 'PG';

  FDConnection.Params.Add('Server=127.0.0.1');
  FDConnection.Params.Add('Database=db_tarefas');
  FDConnection.Params.Add('User_Name=postgres');
  FDConnection.Params.Add('Password=123456');
  FDConnection.Params.Add('Port=5432');
  FDConnection.Params.Add('CharacterSet=UTF8');

  FDConnection.LoginPrompt := False;
  FDConnection.Connected   := True;
end;

end.
